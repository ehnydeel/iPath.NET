{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/ipath.log",
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "iPath.NET"
    }
  },
  "DbProvider": "Sqlite",
  "ConnectionStrings": {
    "Postgres": "Host=127.0.0.1:5433;Database=ipath_data;Username=postgres;Password=password;Include Error Detail=true;",
    "Sqlite": "Data Source=../../../ipath_data/ipath.db;Cache=Shared"
  },
  "iPathConfig": {
    "DbAutoMigrate": true
  },
  "BaseAddress": "http://localhost:5000/",
  "AllowedHosts": "*"
}
