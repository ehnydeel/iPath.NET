@page "/groups"
@page "/user/groups"

@attribute [Authorize]

@inject GroupListViewModel vm
@inject IStringLocalizer T


<IPathHeader Title=@T["My Groups"] />

<MudTable T="GroupListDto" ServerData="vm.GetTableAsync"
          OnRowClick=@((e) => vm.GotoGroup(e.Item))
          HeaderClass="ipath_table_header"
          Dense="true" Hover="true">
    <HeaderContent>
        <MudTh><MudTableSortLabel T="GroupListDto" SortLabel="Name">Name</MudTableSortLabel></MudTh>
        <MudTh></MudTh>
        <MudTh Style="text-align: right;">@T["# Cases"]</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd Style="width: 75%">
            <MudLink Href=@($"groups/{context.Id}")>@context.Name</MudLink>
        </MudTd>
        <MudTd Style="width: 3em;">
            <MudStack Row>
                <MudSpacer />
                <MudIcon Icon=@context.NewNodeIcon />
                <MudIcon Icon=@context.NewAnnotationIcon />
            </MudStack>
        </MudTd>
        <MudTd Style="text-align: right; width: 5em;">
            @context.TotalNodes
        </MudTd>
    </RowTemplate>
</MudTable>

@if (vm.GroupCount == 0)
{
    <MudAlert Severity="Severity.Warning" Class="mt-8 pa-4">
        @T["You are not member of any group yet. Please contect a group or community moderator to join a collaboration group"]
    </MudAlert>
}
else
{
    <MudAlert Severity="Severity.Info" Class="mt-8 px-4" NoIcon>
        <MudStack Row AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.TwoTone.CreateNewFolder" /> 
            @T["New cases in group"]<br />
            <MudSpacer />
        </MudStack>
        <MudStack Row AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.TwoTone.Comment" />
            @T["New annotations in group"]
            <MudSpacer />
        </MudStack>
    </MudAlert>
}