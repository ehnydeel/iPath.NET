@page "/groups/{groupId}"


@inject GroupIndexViewModel vm

@if (Model is null)
{
    <LoadingMessage />
}
else
{
    <IPathHeader Title="@vm.Model.Name" Typo="Typo.h6" />
    <NodeListTable GroupId="@vm.Model.Id" />
}


@code {
    [Parameter]
    public string groupId { get; set; }

    [Parameter]
    public GroupDto Model { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await vm.LoadGroup(Guid.Parse(groupId));
        Model = vm.Model;
        StateHasChanged();
    }
}
