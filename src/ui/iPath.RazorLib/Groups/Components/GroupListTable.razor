@namespace iPath.Blazor.Componenents.Groups
@inject IStringLocalizer T

<MudTable T="GroupListDto" ServerData="ServerData"
          OnRowClick="OnRowClick"
          HeaderClass="ipath_table_header"
          Dense="true" Hover="true">
    <HeaderContent>
        <MudTh><MudTableSortLabel T="GroupListDto" SortLabel="Name">Name</MudTableSortLabel></MudTh>
        <MudTh></MudTh>
        <MudTh Style="text-align: right;">@T["# Cases"]</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd Style="width: 75%" DataLabel=@T["Group"]>
            <MudLink Href=@($"groups/{context.Id}")>@context.Name</MudLink>
        </MudTd>
        <MudTd Style="width: 3em;" HideSmall="true">
            <MudStack Row>
                <MudSpacer />
                <MudIcon Icon=@context.NewNodeIcon />
                <MudIcon Icon=@context.NewAnnotationIcon />
            </MudStack>
        </MudTd>
        <MudTd Style="text-align: right; width: 5em;" HideSmall="true">
            @context.TotalNodes
        </MudTd>
    </RowTemplate>
</MudTable>

@if (ShowLegend)
{
    <MudAlert Severity="Severity.Info" Class="mt-8 px-4" NoIcon>
        <MudStack Row AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.TwoTone.CreateNewFolder" /> 
            @T["New cases in group"]<br />
            <MudSpacer />
        </MudStack>
        <MudStack Row AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.TwoTone.Comment" />
            @T["New annotations in group"]
            <MudSpacer />
        </MudStack>
    </MudAlert>
}

@code{
    [Parameter, EditorRequired]
    public bool ShowLegend { get; set; }

    [Parameter, EditorRequired]
    public Func<TableState, CancellationToken, Task<TableData<GroupListDto>>> ServerData { get; set; }

    [Parameter]
    public EventCallback<TableRowClickEventArgs<GroupListDto>> OnRowClick { get; set; }
}