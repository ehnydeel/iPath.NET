@namespace iPath.Blazor.Componenents.Shared

<MudRadioGroup T="string" @bind-Value="Value" @bind-Value:after="OnValueChanged">
    @if (!string.IsNullOrEmpty(Label))
    {
        <MudText Style="font-weight: bold;" Typo="Typo.subtitle1" Class="mr-4">@Label</MudText>        
    }
    <MudRadio Value=@("female") Dense="@Dense" Size="@Size">Female</MudRadio>
    <MudRadio Value=@("male") Dense="@Dense" Size="@Size">Male</MudRadio>
    <MudRadio Value=@("other") Dense="@Dense" Size="@Size">Other</MudRadio>
    <MudRadio Value=@("unknown") Dense="@Dense" Size="@Size">Unknown</MudRadio>
</MudRadioGroup>

@code {
    [Parameter]
    public string Value { get; set; }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    Task OnValueChanged() => ValueChanged.InvokeAsync(Value);

    [Parameter]
    public bool Dense { get; set; }

    [Parameter]
    public Size Size { get; set; } = Size.Small;

    [Parameter]
    public string Label { get; set; } = "Gender";
}
