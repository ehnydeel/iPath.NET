@namespace iPath.Blazor.Componenents.Shared

<MudSelect T="string" @bind-Value="Value" @bind-Value:after="OnValueChanged"
           Required="@Required" Label="@Label"
           ShrinkLabel="@ShrinkLabel" Margin="@Margin"
           Dense="@Dense" Variant="@Variant">
    <MudSelectItem Value=@("female")>Female</MudSelectItem>
    <MudSelectItem Value=@("male")>Male</MudSelectItem>
    <MudSelectItem Value=@("other")>Other</MudSelectItem>
    <MudSelectItem Value=@("unknown")>Unknown</MudSelectItem>
</MudSelect>

@code {
    [Parameter]
    public string Value { get; set; }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    Task OnValueChanged() => ValueChanged.InvokeAsync(Value);

    [Parameter]
    public bool Dense { get; set; }

    [Parameter]
    public bool ShrinkLabel { get; set; }

    [Parameter]
    public Variant Variant { get; set; } = Variant.Outlined;

    [Parameter]
    public Margin Margin { get; set; }

    [Parameter]
    public string Label { get; set; } = "Gender";

    [Parameter]
    public bool Required { get; set; }
}
