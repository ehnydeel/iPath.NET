<MudButton Disabled="@_processing" OnClick="ProcessSomething"
           Variant="Variant.Filled" Color="@Color" StartIcon="@btnIcon">
    @if (_processing)
    {
        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
        <MudText Class="ms-2">@ProcessingText</MudText>
    }
    else
    {
        <MudText>@Text</MudText>
    }
</MudButton>

@code {
    [Parameter, EditorRequired]
    public string Text { get; set; } = "Click me";

    [Parameter]
    public string ProcessingText { get; set; } = "processing ...";

    [Parameter, EditorRequired]
    public Func<Task> OnClick { get; set; }

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    [Parameter]
    public string? Icon { get; set; }

    private bool _processing = false;
    private string btnIcon => _processing ? string.Empty : Icon;

    async Task ProcessSomething()
    {
        _processing = true;
        await OnClick();
        _processing = false;
    }
}