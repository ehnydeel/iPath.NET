@inject CodingService_v1 srv

<MudAutocomplete Label="@Label" Variant="Variant" MaxItems="100"
                 T="CodedConcept"
                 @bind-Value="Code"
                 @bind-Value:after="OnCodeChanged"
                 ToStringFunc=@(x => x.ToDisplay())
                 SearchFunc="srv.FindTopoConcetps" 
                 Clearable="true" />

@code {
    [Parameter]
    public CodedConcept Code { get; set; }

    [Parameter]
    public EventCallback<CodedConcept> CodeChanged { get; set; }

    async Task OnCodeChanged()
    {
        CodeChanged.InvokeAsync(Code);
    }

    [Parameter]
    public string Label { get; set; } = "Topography";

    [Parameter]
    public Variant Variant { get; set; } = Variant.Outlined;
}
