@namespace iPath.Blazor.Componenents.Questionaires

@inject ServiceRequestViewModel vm

<iPath.LHCForms.LhcForm ReadOnly="true"  @ref="frm" />

@code {
    [Parameter, EditorRequired]
    public QuestionnaireResponseData Data { get; set; }

    iPath.LHCForms.LhcForm frm;
    string? q;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    public async Task LoadDataAsync()
    {
        if (frm is not null)
        {
            q = await vm.GetQuesiotnnaireResource(Data.QuestionnaireId, Data.Version);
            await frm.LoadFormAsync(q, Data.Resource);
        }
    }
}
