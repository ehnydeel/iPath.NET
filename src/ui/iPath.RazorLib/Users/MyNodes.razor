@page "/mycases"
@page "/user/cases"

@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

@inject IStringLocalizer T
@inject AuthenticationStateProvider asp
@inject AppState appSate

<IPathHeader Title=@T["My cases"] />

@if (UserId.HasValue)
{
    <NodeListTable OwnerId="UserId" />
}

@code {
    Guid? UserId = null;

    protected override async Task OnInitializedAsync()
    {
        var a = await asp.GetAuthenticationStateAsync();
        if (a.User.Identity.IsAuthenticated)
        {
            await appSate.ReloadSession();
            if (appSate.User != null)
            {
                UserId = appSate.User.Id;
                StateHasChanged();
            }
        }
    }
}
