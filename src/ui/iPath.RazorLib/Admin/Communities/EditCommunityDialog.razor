@using iPath.Blazor.Componenents.Admin.Communities
@inject IStringLocalizer T

<MudDialog Style="min-width: 500px;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            @T["Update Community"] @Model.Name
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@Model" @ref="frm">
            <MudTextField @bind-Value="@Model.Name" Label=@T["Name"] Required="true"
                          Variant="Variant.Outlined" ShrinkLabel="true" Margin="Margin.Dense" Dense="true" />
            <OwnerLookup Label=@T["Community Owner"] Class="mt-4" @bind-Value="Model.Owner" ReadOnly="true"
                         Variant="Variant.Outlined" ShrinkLabel="true" Margin="Margin.Dense" Dense="true" />
            <MudTextField @bind-Value="@Model.Settings.Description" Label=@T["Description"] Variant="Variant.Outlined" Lines="3" AutoGrow="true" />
            <!--
            <MudTextField @bind-Value="@CaseTypeList" Label=@T["Case Types"] Variant="Variant.Outlined" Lines="8" />
            -->
        </MudForm>
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mt-3">
                @ErrorMessage
            </MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public CommunityEditModel Model { get; set; } = new();

    private string CaseTypeList = "";

    string ErrorMessage = "";

    MudForm frm;

    private void Cancel() => MudDialog.Cancel();

    protected override void OnParametersSet()
    {
        CaseTypeList = string.Join(Environment.NewLine, Model.Settings.CaseTypes);
    }


    private async Task Save()
    {
        StateHasChanged();

        await frm.Validate();

        if (Model.Owner is null)
        {
            ErrorMessage = T["please select a group owner."];
            return;
        }

        if (frm.IsValid)
        {
            Model.Settings.CaseTypes = CaseTypeList.Split(Environment.NewLine);
            MudDialog.Close(DialogResult.Ok(Model));
        }
        else
        {
            ErrorMessage = T["Please fill all required fields."];
        }
    }
}