@namespace iPath.Blazor.Componenents.Admin.Users

@inject IStringLocalizer T

<MudDialog Style="min-height: 300px;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Notifications" Class="mr-3 mb-n1" />
            @T["Notification Settings"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudStack>
            <MudCheckBox Label=@T["Daily Summary by Email"] @bind-Value="Model.DailyEmailSummary" />
            <MudTextField Label=@T["Filter for Topography (ICD-O)"] @bind-Value="Model.IcdoTopoCode" Variant="Variant.Outlined"/>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" OnClick="Ok">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public NotificationSettings Model { get; set; } 

    private void Cancel() => MudDialog.Cancel();
    private void Ok() => MudDialog.Close(true);
}