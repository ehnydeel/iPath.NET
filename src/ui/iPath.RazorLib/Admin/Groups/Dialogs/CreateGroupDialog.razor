@namespace iPath.Blazor.Componenents.Admin.Groups

@using iPath.Blazor.Componenents.Users.Componenets
@inject IStringLocalizer T

<MudDialog Style="min-width: 500px;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            @T["create a new group"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@Model" @ref="frm" Spacing="4">
            <MudTextField @bind-Value="@Model.Name" Label=@T["Name"] Required="true" Variant="Variant.Outlined" />
            <MudTextField @bind-Value="@Model.Settings.Purpose" Label=@T["Purpose"] Variant="Variant.Outlined" Lines="5" AutoGrow="true" />
            <OwnerLookup Label=@T["Group Owner"] Class="mt-4" @bind-Value="Model.Owner" />
            <CommunityLookup Label=@T["Community"] @bind-Value="@Model.Community" />
        </MudForm>
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mt-3">
                @ErrorMessage
            </MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public CreateGroupCommandModel Model { get; set;  } = new();

    MudForm frm;
    string ErrorMessage = string.Empty;

    private void Cancel() => MudDialog.Cancel();


    private async Task Save()
    {
        ErrorMessage = "";
        StateHasChanged();

        await frm.Validate();

        if (Model.Owner is null)
        {
            ErrorMessage = T["please select a groups owner."];
            return;
        }
        if (Model.Name.Length < 4)
        {
            ErrorMessage = T["Name must have 3 or more characters."];
            return;
        }

        if (frm.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(Model));
        }
        else
        {
            ErrorMessage = T["Please fill all required fields."];
        }
    }


   


}