@using iPath.Blazor.Componenents.Users.Componenets
<MudDialog Style="min-width: 500px;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            Update Group @Model.Name
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@Model" @ref="frm">
            <MudTextField @bind-Value="@Model.Name" Label="Name" Required="true" Variant="Variant.Outlined" />
            <MudTextField @bind-Value="@Model.Settings.Purpose" Label="Description" Variant="Variant.Outlined" Lines="5" AutoGrow="true" Required="true" />

            <UserLookUp Label="Group Owner" Class="mt-4" @bind-SelectedUser="Model.Owner" />
        </MudForm>
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mt-3">
                @ErrorMessage
            </MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public GroupEditModel Model { get; set; } = new();

    string ErrorMessage = "";

    MudForm frm;

    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        StateHasChanged();

        await frm.Validate();

        if (Model.Owner is null)
        {
            ErrorMessage = "please select a community owner.";
            return;
        }

        if (frm.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(Model));
        }
        else
        {
            ErrorMessage = "Please fill all required fields.";
        }
    }
}