@namespace iPath.Blazor.Componenents.Admin.Groups

@inject GroupAdminViewModel vm
@inject IStringLocalizer T
@inject NavigationManager nm

@if (EditModel != null)
{
    <MudTextField Label=@T["Name"] @bind-Value="EditModel.Name" Variant="@Variant.Outlined" Margin="Margin.Dense" />
    <MudGrid>
        <MudItem xs="12" sm="6">
            <OwnerLookup Label=@T["Group Owner"] Class="mt-4" @bind-Value="EditModel.Owner" Variant="Variant.Outlined" Margin="Margin.Dense" />
        </MudItem>        
        <MudItem xs="12" sm="6">
            <CommunityLookup Label=@T["Community"] Class="mt-4" @bind-Value="EditModel.Community" Variant="Variant.Outlined" Margin="Margin.Dense" />
        </MudItem>
    </MudGrid>
    <iPath.Blazor.Componenents.Groups.GroupSettingsForm Model="@EditModel.Settings" />

    <MudStack Row Class="mt-10" Spacing="2">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Save">Save</MudButton>
        <MudButton Variant="Variant.Filled">Cancel</MudButton>
    </MudStack>
}

@code {
    [Parameter, EditorRequired]
    public GroupDto Model { get; set; }

    GroupEditModel EditModel = new();


    protected override void OnParametersSet()
    {
        if (Model is not null)
        {
            base.OnInitialized();
            EditModel = new GroupEditModel
            {
                Id = vm.SelectedGroup.Id,
                Name = vm.SelectedGroup.Name,
                Owner = vm.SelectedGroup.Owner,
                Community = vm.SelectedGroup.Community,
                Settings = vm.SelectedGroup.Settings.Clone()
            };
            StateHasChanged();
        }
    }


    async Task Save()
    {
        var res = await vm.SaveEditModel(EditModel);
        nm.NavigateTo("admin/groups");
    }
}