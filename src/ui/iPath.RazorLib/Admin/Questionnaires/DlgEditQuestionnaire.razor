@using System.Text.Json
@using System.Threading.Tasks
@using Hl7.Fhir.Serialization
@using iPath.Application.Features.ServiceRequests
@inject IStringLocalizer T

<MudDialog Style="min-width: 500px;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@icon" Class="mr-3 mb-n1" />
            @title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@Model" @ref="frm" Spacing="4">
            <MudTextField @bind-Value="@Model.QuestionnaireId" Label=@T["Id"] ShrinkLabel="true" Required="true" Variant="Variant.Outlined" Disabled="IdDisabled" />
            <MudTextField @bind-Value="@Model.Name" Label=@T["Name"] ShrinkLabel="true" Required="true" Variant="Variant.Outlined" />

            <MudStack Row Class="mt-2">
                <MudTextField @bind-Value="Model.ResourceFileName" Label=@T["Quesiotnnaire File"] ReadOnly="true" ShrinkLabel="true" />
                <MudFileUpload T="IBrowserFile" @bind-Files="Model.ResourceFile" OnFilesChanged="UploadFile">
                    <ActivatorContent>
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Filled.FileUpload">
                            FHIR
                        </MudButton>
                    </ActivatorContent>
                </MudFileUpload>
            </MudStack>
            <MudTextField @bind-Value="@Model.Resource" Label=@T["FHIR Resource"] Variant="Variant.Outlined" Lines="10" ReadOnly="@resourceFromFile" />
        </MudForm>
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mt-3">
                @ErrorMessage
            </MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public EditQuestionnaireModel Model { get; set; } = new();

    MudForm frm;
    string ErrorMessage = string.Empty;
    string title => Model is null || Model.Version == 0 ? T["Create a new questionnaire"] : T["Edit questionnaire"];
    string icon => Model is null || Model.Version == 0 ? Icons.Material.Filled.Add : Icons.Material.Filled.Edit;
    bool IdDisabled => Model is not null && Model.Version > 0;

    private void Cancel() => MudDialog.Cancel();


    private async Task Save()
    {
        ErrorMessage = "";
        StateHasChanged();

        await frm.Validate();
        if (frm.IsValid)
        {
            if (Model.QuestionnaireId?.Length < 4)
            {
                ErrorMessage = T["Id Must habe 4 ore more characters"];
                return;
            }
            if (Model.Resource?.Length < 4)
            {
                ErrorMessage = T["Please specify a FHIR Resource."];
                return;
            }

            MudDialog.Close(DialogResult.Ok(Model));
        }
        else
        {
            ErrorMessage = T["Please fill all required fields."];
        }
    }

    bool resourceFromFile = false;
    const long maxMemFile = 100000;
    private async Task UploadFile(InputFileChangeEventArgs e)
    {
        if (e.File is not null)
        {
            Model.ResourceFileName = e.File.Name;

            if (e.File.Size < maxMemFile)
            {
                try
                {
                    using var memoryStream = new MemoryStream();
                    await e.File.OpenReadStream(maxMemFile).CopyToAsync(memoryStream);

                    // parse as FHIR Questionnaire
                    var fhir = System.Text.Encoding.Default.GetString(memoryStream.ToArray());
                    var options = new JsonSerializerOptions().ForFhir(Hl7.Fhir.Model.ModelInfo.ModelInspector);
                    var qr = JsonSerializer.Deserialize<Hl7.Fhir.Model.Questionnaire>(fhir, options);

                    // extract id & title
                    if (string.IsNullOrEmpty(Model.QuestionnaireId))
                    {
                        Model.QuestionnaireId = qr.Id;
                    }
                    if (string.IsNullOrEmpty(Model.Name))
                    {
                        Model.Name = qr.Title;
                    }

                    // serialize as JSON again
                    options = new JsonSerializerOptions().ForFhir(Hl7.Fhir.Model.ModelInfo.ModelInspector).Pretty();
                    Model.Resource = JsonSerializer.Serialize(qr, options);

                    resourceFromFile = true;
                    var l = Model.Resource.Length;
                }
                catch(Exception ex)
                {
                    ErrorMessage = T["The content provided is not a valid FHIR Quesionnaire"];
                }
            }
        }
    }

}