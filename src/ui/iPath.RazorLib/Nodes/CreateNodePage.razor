@page "/node/new/{groupId}"

@inherits NodeViewComponentBase

@inject GroupListViewModel gvm



@if (vm.RootNode is null)
{
    @if (forms.Any())
    {
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">@T["Select a Description Form"]</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudList T="QuestionnaireForGroupDto">
                    @foreach (var form in forms)
                    {
                        <MudListItem Icon="@Icons.Material.TwoTone.DynamicForm" Value="form" OnClick=@(() => CreateCase(form)) Text="@form.QuestinnaireName" />
                    }
                    <MudListItem Icon="@Icons.Material.TwoTone.TextFields" Value=@(null as QuestionnaireForGroupDto) OnClick=@(() => CreateCase(null)) Text=@T["plain text"] />
                </MudList>
            </MudCardContent>
        </MudCard>
    }
}
else
{
    <NodeHeader />
    <NodeEditForm Model="vm.RootNode.Description" GroupId="vm.RootNode.GroupId.Value" Variant="Variant.Outlined" Class="my-8 z-50" @ref="frm" />

    <NodeGalleryDropZone />

    <MudStack Row Spacing="4">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Save"
                   OnClick="OnSave">@SaveText</MudButton>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel"
                   OnClick=@(() => vm.CancelEdit())>Cancel</MudButton>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Delete">Delete</MudButton>
    </MudStack>
}

@code {
    [Parameter]
    public string groupId { get; set; }

    private GroupDto Group = null!;


    private List<QuestionnaireForGroupDto> forms = new();
    private QuestionnaireForGroupDto? SelectedQuestionnaire;


    NodeEditForm frm;

    string SaveText = "Save";
    string Title = "New Case";

    protected override async Task OnInitializedAsync()
    {
        vm.ClearData();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Guid.TryParse(groupId, out var GroupId))
        {
            Group = await gvm.GetGroupDto(GroupId);

            // if the group has no forms (questionnaires) for case descriptions => direct description entry
            if (!Group.Questionnaires.Any(q => q.Usage == eQuestionnaireUsage.CaseDescription))
            {
                await CreateCase(null);
            }
            else
            {
                forms = Group.Questionnaires.Where(q => q.Usage == eQuestionnaireUsage.CaseDescription).ToList();
            }
        }
    }

    async Task CreateCase(QuestionnaireForGroupDto? q)
    {
        SelectedQuestionnaire = q;
        await vm.CreateNewNode(Group.Id);
        SaveText = T["Publish"];
        Title = T["New Case"];
        vm.IsEditing = true;
        StateHasChanged();
    }


    async Task OnSave()
    {
        if (frm.IsValid)
        {
            await vm.Save();
        }
    }

    protected override void OnDisposed()
    {
        if (vm.IsEditing)
            vm.CancelEdit();
    }
}
